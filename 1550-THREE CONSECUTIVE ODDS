class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int cou=0;
        for(int i=0;i<arr.length;i++){
            if(arr[i]%2!=0){
                cou++;
                if(cou==3)
                   return true;
            }
            else
              cou=0;
        }
        return false;
    }
}
